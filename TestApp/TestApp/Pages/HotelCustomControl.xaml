<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Pages.HotelCustomControl">
    <ContentView.Content>
        <Frame x:Name="hotelFrame" CornerRadius="10" HasShadow="True" OutlineColor="Silver" BackgroundColor="#DEDEDE" >

            <StackLayout Orientation="Vertical" Margin="0, 0, 0, 10">
                <Image x:Name="hotelImage" BindingContext="{x:Reference hotelFrame}" WidthRequest="{Binding Width}"/>
                <Label x:Name="hotelName" />
                <Label x:Name="hotelCity"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.SelectedHotelPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="hotelImage"/>
            <Label x:Name="hotelName"/>
            <Label x:Name="hotelDesc"/>
            <Label x:Name="hotelNumberRooms"/>
            <DatePicker x:Name="bookingStartDatePicker" DateSelected="BookingStartDatePicker_DateSelected"/>
            <Picker x:Name="daysPicker" SelectedIndexChanged="DaysPicker_SelectedIndexChanged"/>
            <Label x:Name="AvailableLabel"/>
            <Button x:Name="bookButton" Clicked="BookButton_Clicked"/>
            <Label x:Name="responseLabel" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
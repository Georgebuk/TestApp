<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.RegistrationPage"
             Title="Register Account">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="50" VerticalOptions="Center">
                <Entry Placeholder="Email" x:Name="EntryEmail"></Entry>
                <Entry Placeholder="Password" x:Name ="EntryPassword" IsPassword="True"></Entry>
                <Entry Placeholder="First Name" x:Name="EntryFName"></Entry>
                <Entry Placeholder="Last Name" x:Name="EntrySName"></Entry>
                <Entry Placeholder="Phonenumber" x:Name="EntryPhonenumber" Keyboard="Numeric"></Entry>
                <DatePicker x:Name="dateOfBirthPicker" DateSelected="DateOfBirthPicker_DateSelected" MaximumDate="{Binding MaximumDate}"/>
                <Button Text="Register" TextColor="White" BackgroundColor="Black" Clicked="Button_Clicked"></Button>
                <Label x:Name="responseLabel" Text="" TextColor="Red" IsVisible="False"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>